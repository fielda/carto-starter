# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

# https://stackoverflow.com/questions/2131213/can-you-make-valid-makefiles-without-tab-characters
[Makefile]
indent_style = tab
